<Window x:Class="_0202.ProductsHelp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_0202"
        mc:Ignorable="d"
        Title="ProductsHelp" Height="450" Width="800" Icon="/Новые технологии.ico"
        FontFamily="Bahnschrift Light SemiCondensed" Background="#FFFFFF">

    <Grid>
        <Label Content="Предлагаемая продукция" HorizontalAlignment="Left" Margin="250,10,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Foreground="#0C4882"/>
        <ListBox x:Name="ProductsList" Background="#BBDCFA" Margin="24,76,49,102" FontWeight="Bold"
                 HorizontalContentAlignment="Stretch">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Black" BorderThickness="1" Padding="8" Margin="0,0,0,10" HorizontalAlignment="Stretch">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="120"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{Binding Name}" FontSize="16" FontWeight="Bold" Foreground="#0C4882"/>
                            <TextBlock Grid.Column="1" Text="{Binding Quantity, StringFormat=Количество: {0}}" FontSize="14" HorizontalAlignment="Center" Foreground="#0C4882"/>
                            <TextBlock Grid.Column="2" Text="{Binding MinPrice, StringFormat={}{0:F2} р}" FontSize="14" HorizontalAlignment="Center" Foreground="#0C4882"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Image Margin="726,10,10,363" Source="/Новые технологии.png" Stretch="Fill"/>
        <Button Content="Назад" Background="#0C4882" Foreground="#FFFFFF" FontSize="16" FontWeight="Bold" HorizontalAlignment="Left" Margin="299,358,0,0" VerticalAlignment="Top" Height="37" Width="189" Click="Back_Click"/>
    </Grid>
</Window>
