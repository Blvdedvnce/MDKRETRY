<Window x:Class="_0202.OrderWorks"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_0202"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="Работа с заявками" Height="515" Width="800" FontFamily="Bahnschrift Light SemiCondensed"
        Background="#FFFFFF" Icon="/Новые технологии.ico">

    <Grid>
        <Label Content="Добавление / Изменение заявки партнера" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold" Foreground="#0C4882"/>
        <Label Content="Тип партнера:" HorizontalAlignment="Left" Margin="59,53,0,0" VerticalAlignment="Top" FontSize="14" Foreground="#0C4882"/>
        <ComboBox x:Name="TypePartner" HorizontalAlignment="Left" Margin="59,80,0,0" VerticalAlignment="Top" Width="187" Height="26" FontSize="14" Background="#BBDCFA"/>
        <Label Content="Наименование партнера:" HorizontalAlignment="Left" Margin="59,127,0,0" VerticalAlignment="Top" FontSize="14" Foreground="#0C4882"/>
        <TextBox x:Name="PartnerName" HorizontalAlignment="Left" Margin="59,154,0,0" TextWrapping="Wrap" Background="#BBDCFA" VerticalAlignment="Top" Width="187" Height="26" FontSize="14"/>
        <Label Content="ФИО директора:" HorizontalAlignment="Left" Margin="59,197,0,0" VerticalAlignment="Top" FontSize="14" Foreground="#0C4882"/>
        <TextBox x:Name="DirectorFIO" HorizontalAlignment="Left" Margin="59,224,0,0" TextWrapping="Wrap" Background="#BBDCFA" VerticalAlignment="Top" Width="187" Height="26" FontSize="14"/>
        <Label Content="Юридический адрес:" HorizontalAlignment="Left" Margin="291,53,0,0" VerticalAlignment="Top" FontSize="14" Foreground="#0C4882"/>
        <TextBox x:Name="Address" HorizontalAlignment="Left" Margin="291,80,0,0" TextWrapping="Wrap" Background="#BBDCFA" VerticalAlignment="Top" Width="187" Height="26" FontSize="14"/>
        <Label Content="Рейтинг:" HorizontalAlignment="Left" Margin="291,127,0,0" VerticalAlignment="Top" FontSize="14" Foreground="#0C4882"/>
        <TextBox x:Name="Rating" HorizontalAlignment="Left" Margin="291,154,0,0" TextWrapping="Wrap" Background="#BBDCFA" VerticalAlignment="Top" Width="187" Height="26" FontSize="14"/>
        <Label Content="Телефон:" HorizontalAlignment="Left" Margin="291,197,0,0" VerticalAlignment="Top" FontSize="14" Foreground="#0C4882"/>
        <TextBox x:Name="Phone" HorizontalAlignment="Left" Margin="291,224,0,0" TextWrapping="Wrap" Background="#BBDCFA" VerticalAlignment="Top" Width="187" Height="26" FontSize="14"/>
        <Label Content="Email:" HorizontalAlignment="Left" Margin="543,53,0,0" VerticalAlignment="Top" FontSize="14" Foreground="#0C4882"/>
        <TextBox x:Name="Email" HorizontalAlignment="Left" Margin="543,80,0,0" TextWrapping="Wrap" Background="#BBDCFA" VerticalAlignment="Top" Width="187" Height="26" FontSize="14"/>
        <Button Content="Сохранить" HorizontalAlignment="Left" Margin="543,140,0,0" VerticalAlignment="Top" Height="36" Width="187" FontSize="16" FontWeight="Bold" Background="#0C4882" Foreground="#FFFFFF" Click="Button_Click_1"/>
        <Button Content="Назад" HorizontalAlignment="Left" Margin="59,405,0,0" VerticalAlignment="Top" Width="120" Height="36" Background="#0C4882" Foreground="#FFFFFF" Click="Button_Click"/>
        <!-- Выбор продукции -->
        <Label Content="Продукция:" HorizontalAlignment="Left" Margin="543,180,0,0" VerticalAlignment="Top" FontSize="14" Foreground="#0C4882"/>
        <ComboBox x:Name="ProductBox" HorizontalAlignment="Left" Margin="543,207,0,0" VerticalAlignment="Top" Width="187" Height="26" Background="#BBDCFA" FontSize="14"/>

        <!-- Количество -->
        <Label Content="Количество:" HorizontalAlignment="Left" Margin="543,240,0,0" VerticalAlignment="Top" FontSize="14" Foreground="#0C4882"/>
        <TextBox x:Name="QtyBox" HorizontalAlignment="Left" Margin="543,267,0,0" VerticalAlignment="Top" Width="187" Height="26" Background="#BBDCFA" FontSize="14"/>

        <!-- Кнопка добавления -->
        <Button Content="Добавить" HorizontalAlignment="Left" Margin="543,303,0,0" VerticalAlignment="Top"
        Width="187" Height="30" Background="#0C4882" Foreground="White" Click="AddProduct_Click"/>

        <!-- ListBox товаров -->
        <ListBox x:Name="CartList" HorizontalAlignment="Left" Margin="59,270,0,0" VerticalAlignment="Top"
         Width="419" Height="130" Background="#BBDCFA" FontSize="14"/>

        <!-- Итоговая стоимость -->
        <Label x:Name="TotalPrice" Content="Итог: 0 руб." HorizontalAlignment="Left" Margin="543,340,0,0"
       VerticalAlignment="Top" FontSize="16" FontWeight="Bold" Foreground="#0C4882"/>

        <Image Margin="712,10,10,433" Source="/Новые технологии.png" Stretch="Fill"/>
    </Grid>
</Window>
